<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DirectorioEmpleadosMawi.Views.SettingsPage"
             Title="SettingsView">
    

    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
        
        <Label 
            Text="Tema" FontSize="Title" HorizontalTextAlignment="Center" />
        <Picker x:Name="ThemePicker" SelectedIndexChanged="OnThemeChanged" WidthRequest="300">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Sistema</x:String>
                    <x:String>Claro</x:String>
                    <x:String>Oscuro</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
    </VerticalStackLayout>
</ContentPage>