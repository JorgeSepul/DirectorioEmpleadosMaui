<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DirectorioEmpleadosMawi.Views.EmployeesPage"
              xmlns:vm="clr-namespace:DirectorioEmpleadosMawi.ViewModels"
             xmlns:templates="clr-namespace:DirectorioEmpleadosMawi.Resources.Styles.Templates"
             Title="Empleados">
    <CollectionView ItemsSource="{Binding Empleados}">
        <CollectionView.ItemsLayout>
            <GridItemsLayout Orientation="Vertical" Span="2" />
        </CollectionView.ItemsLayout>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <templates:CardView 
                Nombre="{Binding Nombre}" 
                Apellidos="{Binding Apellidos}"
                NombreDpto="{Binding Departamento.Nombre}"
                ImageUrl="{Binding FotoUrl}"
                    
                CardColor="LightCoral"
                BorderColor="LightYellow"/>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>